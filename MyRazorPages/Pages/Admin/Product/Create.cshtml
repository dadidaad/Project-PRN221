@page
@model MyRazorPages.Pages.Admin.Product.CreateModel
@{
}
<div class="path-admin">CREATE A NEW PRODUCT</div>
<div class="content-main">
    <form id="content-main-product" action="" method="post">
        <div class="content-main-1">
            <label>Product name (*):</label><br />
            <input type="text" asp-for="Product.ProductName"/><br />
            <span class="msg-error" asp-validation-for="Product.ProductName"></span><br />
            <label>Unit price:</label><br />
            <input type="number" asp-for="Product.UnitPrice"/><br />
            <label>Quantity per unit:</label><br />
            <input type="text" asp-for="Product.QuantityPerUnit"/><br />
            <label>Units in stock (*):</label><br/>
            <input type="number" asp-for="Product.UnitsInStock"/><br />
            <span class="msg-error" asp-validation-for="Product.UnitsInStock"></span><br />
        </div>
        <div class="content-main-1">
            <label>Category (*):</label><br />
            <select asp-for="Product.CategoryId"
                    asp-items="@(new SelectList(Model.Categories, nameof(Category.CategoryId), nameof(Category.CategoryName)))">
                <option>Please select one</option>
            </select>
            <br />
            <label>Reorder level:</label><br />
            <input type="number" asp-for="Product.ReorderLevel" disabled/><br />
            <label>Units on order:</label><br />
            <input type="number" asp-for="Product.UnitsOnOrder" disabled/><br />
            <label>Discontinued:</label><br />
            <input type="checkbox" asp-for="Product.Discontinued"/><br />
            <input type="submit" value="Save" />
        </div>
    </form>
</div>