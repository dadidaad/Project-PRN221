@page
@model MyRazorPages.Pages.IndexModel
@{
}

<div id="content-left">
    <h3>CATEGORY</h3>
    <ul>
        @foreach(var cat in Model.Categories){
            <a href="~/Category/Index?categoryId=@cat.CategoryId">
            <li>@cat.CategoryName</li></a>
        }
    </ul>
</div>
<div id="content-right">
    <div class="path">Hot</b></div>
    <div class="content-main">
        @foreach(var hot in Model.HotProducts){
            <div class="product">
                <a href="~/product/detail?id=@hot.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                <div class="name"><a href="~/product/detail?id=@hot.ProductId">@hot.ProductName</a></div>
                <div class="price">$@(((float)hot.UnitPrice).ToString("0.00"))</div>
                <div><a asp-page="/Account/Cart" asp-page-handler="buyNow" asp-route-ProductId="@hot.ProductId">Buy now</a></div>
            </div>
        }
    </div>
    <div class="path">Best Sale</b></div>
    <div class="content-main">
        @foreach (var bestSale in Model.BestSaleProducts)
        {
            <div class="product">
                <a href="~/product/detail?id=@bestSale.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                <div class="name"><a href="~/product/detail?id=@bestSale.ProductId">@bestSale.ProductName</a></div>
                <div class="price">$@(((float)bestSale.UnitPrice).ToString("0.00"))</div>
                <div><a asp-page="/Account/Cart" asp-page-handler="buyNow" asp-route-ProductId="@bestSale.ProductId">Buy now</a></div>
            </div>
        }
    </div>
    <div class="path">New Product</b></div>
    <div class="content-main">
        @foreach (var newProduct in Model.NewProducts)
        {
            <div class="product">
                <a href="~/product/detail?id=@newProduct.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                <div class="name"><a href="~/product/detail?id=@newProduct.ProductId">@newProduct.ProductName</a></div>
                <div class="price">$@(((float)newProduct.UnitPrice).ToString("0.00"))</div>
                <div><a asp-page="/Account/Cart" asp-page-handler="buyNow" asp-route-ProductId="@newProduct.ProductId">Buy now</a></div>
            </div>
        }
    </div>
</div>